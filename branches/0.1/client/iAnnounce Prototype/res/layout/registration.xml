<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView  
		android:id="@+id/registrationTextviewHeading"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Registration Form"
    	android:layout_marginLeft="30sp"
    	android:paddingTop="5sp"
    	android:layout_marginBottom="10sp"
    	android:paddingRight="5sp"
    	android:textSize="30sp"
    	   />
	<TextView  
		android:id="@+id/registrationTextviewName"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_marginLeft="20sp"
    	android:layout_below="@+id/registrationTextviewHeading"
    	android:text="First Name:"
    	android:layout_marginTop="10sp"    	    	
    	android:paddingRight="5sp"
    	android:textSize="20sp" 
    />
    <EditText
        android:id="@+id/registrationEdittextName"
        android:layout_width="150sp"
        android:layout_height="35sp"
        android:layout_toRightOf="@+id/registrationTextviewName"
        android:layout_below="@+id/registrationTextviewHeading"
        android:layout_alignLeft="@+id/registrationTextviewDOB2"
        android:layout_marginTop="7sp"
        
        
     />
     
     <TextView  
		android:id="@+id/registrationTextviewLastName"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_marginLeft="20sp"
    	android:layout_below="@+id/registrationTextviewName"
    	android:text="Last Name:"
    	android:layout_marginTop="15sp"
    	android:paddingRight="5sp"
    	android:textSize="20sp" 
    />
    <EditText
        android:id="@+id/registrationEdittextLastName"
        android:layout_width="150sp"
        android:layout_height="35sp"
        android:layout_toRightOf="@+id/registrationTextviewLastName"
        android:layout_below="@+id/registrationEdittextName"
        android:layout_alignLeft="@+id/registrationTextviewDOB2"
        android:layout_marginTop="7sp"
        
     />
     
     <TextView  
		android:id="@+id/registrationTextviewUsername"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_alignLeft="@+id/registrationTextviewName"
    	android:layout_below="@+id/registrationTextviewLastName"
    	android:layout_marginTop="15sp"
    	android:text="Username:"
    	android:textSize="20sp" 
    />
    <EditText
        android:id="@+id/registrationEdittextUsername"
        android:layout_width="150sp"
        android:layout_height="35sp"
        android:layout_toRightOf="@+id/registrationTextviewUsername"
        android:layout_below="@+id/registrationEdittextLastName"
        android:layout_alignLeft="@+id/registrationTextviewDOB2"
        android:layout_marginTop="7sp"
     />
     
     <TextView  
		android:id="@+id/registrationTextviewPassword"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_alignLeft="@+id/registrationTextviewName"
    	android:layout_below="@+id/registrationTextviewUsername"
    	android:text="Password:"
    	android:layout_marginTop="12sp"
    	android:textSize="20sp" 
    />
    <EditText
        android:id="@+id/registrationEdittextPassword"
        android:layout_width="150sp"
        android:layout_height="35sp"
        android:layout_toRightOf="@+id/registrationTextviewPassword"
        android:layout_below="@+id/registrationEdittextUsername"
        android:layout_alignLeft="@+id/registrationTextviewDOB2"
        android:layout_marginTop="5sp"
        android:password="true"
     />
     <TextView  
		android:id="@+id/registrationTextviewEmail"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_alignLeft="@+id/registrationTextviewName"
    	android:layout_below="@+id/registrationTextviewPassword"
    	android:text="Email ID:"
    	android:layout_marginTop="18sp"
    	android:textSize="20sp" 
    />
    <EditText
        android:id="@+id/registrationEdittextEmail"
        android:layout_width="150sp"
        android:layout_height="35sp"
        android:layout_toRightOf="@+id/registrationTextviewEmail"
        android:layout_below="@+id/registrationEdittextPassword"
        android:layout_alignLeft="@+id/registrationTextviewDOB2"
        android:layout_marginTop="10sp"
        
     />
      <TextView  
		android:id="@+id/registrationTextviewGender"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_alignLeft="@+id/registrationTextviewName"
    	android:layout_below="@+id/registrationTextviewEmail"
    	android:text="Gender:"
    	android:layout_marginTop="18sp"
    	android:textSize="20sp" 
    />
     <RadioGroup
     android:id="@+id/registrationRadiogroupGender"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="3sp"
      android:layout_toRightOf="@+id/registrationTextviewGender"
      android:layout_below="@+id/registrationEdittextEmail"
      android:layout_alignLeft="@+id/registrationTextviewDOB2">
      <RadioButton android:id="@+id/radio_red"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:checked="true"
          android:text="Male" />
      <RadioButton android:id="@+id/radio_blue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Female" />
    </RadioGroup>
    <TextView  
		android:id="@+id/registrationTextviewDOB1"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_alignLeft="@+id/registrationTextviewName"
    	android:layout_below="@+id/registrationTextviewGender"
    	android:text="Date of Birth:"
    	android:layout_marginTop="22sp"
    	android:paddingRight="5sp"
    	android:textSize="20sp" 
    />
    <TextView
    	android:id="@+id/registrationTextviewDOB2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/registrationTextviewDOB1"
        android:layout_below="@+id/registrationRadiogroupGender"
        android:layout_marginTop="10sp"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:text="1/1/1980"
        android:textSize="20sp" 
    />
    <Button android:id="@+id/pickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registrationRadiogroupGender"
        android:layout_toRightOf="@+id/registrationTextviewDOB2"
        android:layout_marginTop="5sp"
        android:text="Change"/>
        
    <Button android:id="@+id/bt_register"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pickDate"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="110sp"
        android:layout_centerHorizontal="true"
        android:text="Register"/>
     
</RelativeLayout>

</ScrollView>
