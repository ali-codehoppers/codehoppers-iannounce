<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
     <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:gravity="center">
    <TextView  
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text=""    	
    	android:textSize="35sp"
    	android:id="@+id/pro_uname"
    	android:gravity="center_horizontal"
    />
    </LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
	<TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Name:      "
    	android:textSize="25sp" 
    />
    <TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text=""
    	android:textSize="25sp"
    	android:id="@+id/pro_name"
    />
    </LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
	<TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Age:         "
    	android:textSize="25sp" 
    />
    <TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="20"
    	android:textSize="25sp"
    	android:id="@+id/pro_age" 
    />
    </LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Gender:   "
    	android:textSize="25sp" 
    />
    <TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Male"
    	android:textSize="25sp"
    	android:id="@+id/pro_gender"  
    />
    </LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
	<TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Average Rating:     "
    	android:textSize="25sp" 
    />
    <TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="10"
    	android:textSize="25sp"
    	android:id="@+id/pro_avg_rate" 
    />
    </LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
	<TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Number of Posts:  "
    	android:textSize="25sp" 
    />
    <TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="47"
    	android:textSize="25sp"
    	android:id="@+id/pro_noofposts"  
    />
    </LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:gravity="center">
      
    </LinearLayout>
       </LinearLayout>
