<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<AbsoluteLayout android:id="@+id/AbsoluteLayout01"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		xmlns:android="http://schemas.android.com/apk/res/android">
		<TextView android:id="@+id/TextView01" android:layout_width="wrap_content"
			android:text="Updates Every" android:layout_x="16dip"
			android:layout_y="66dip" android:layout_height="wrap_content"></TextView>
		<EditText android:id="@+id/et_LocFreq" android:layout_height="50px"
			android:layout_width="80px" android:textSize="12px" android:layout_x="126dip"
			android:layout_y="45dip"></EditText>
		<TextView android:layout_height="wrap_content" android:id="@+id/TextView02"
			android:layout_width="wrap_content" android:text="Minutes"
			android:layout_x="242dip" android:layout_y="68dip"></TextView>
		<EditText android:layout_height="50px" android:layout_width="80px"
			android:textSize="12px" android:layout_x="126dip" android:layout_y="128dip"
			android:id="@+id/et_distance"></EditText>
		<TextView android:layout_height="wrap_content" android:id="@+id/TextView04"
			android:layout_width="wrap_content" android:text="Meters"
			android:layout_x="242dip" android:layout_y="157dip"></TextView>
		<TextView android:layout_height="wrap_content" android:id="@+id/TextView03"
			android:text="Location Updates every" android:layout_x="12dip"
			android:layout_y="144dip" android:layout_width="90px"></TextView>
		<Button android:layout_height="wrap_content"
			android:layout_width="100px" android:layout_x="169dip"
			android:layout_y="249dip" android:text="Cancel" android:id="@+id/bt_option_cancel"></Button>
		<Button android:layout_height="wrap_content" android:text="Save"
			android:layout_width="100px" android:layout_x="28dip"
			android:layout_y="249dip" android:id="@+id/bt_option_save"></Button>
		<!--
			<Button android:layout_height="wrap_content" android:text="Stop
			Service" android:layout_width="100px" android:layout_x="28dip"
			android:layout_y="300dip"
			android:id="@+id/bt_option_cancelTimerTask"></Button>
		-->
	</AbsoluteLayout>
</ScrollView>