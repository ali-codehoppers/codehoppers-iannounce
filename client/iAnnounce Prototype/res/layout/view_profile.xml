<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@color/announcemts_bg" >
    
     <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:gravity="center">
    <TextView  
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text="My Profile"
    	android:textSize="35sp"
    	android:gravity="center_horizontal"
    	android:textColor="@color/announce_labels"
    	android:background="@color/app_background_light" 
    />
    </LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
	<TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Name:      "
    	android:textSize="25sp" 
    	android:textColor="@color/announce_labels"
    />
    <TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Awais Akhter     "
    	android:textSize="25sp"
    	android:id="@+id/mypro_name" 
    	android:textColor="@color/announce_labels"
    />
    </LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
	<TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Age:         "
    	android:textSize="25sp" 
    	android:textColor="@color/announce_labels"
    />
    <TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="20"
    	android:textSize="25sp" 
    	android:id="@+id/mypro_age"
    	android:textColor="@color/announce_labels"
    />
    </LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Gender:   "
    	android:textSize="25sp" 
    	android:textColor="@color/announce_labels"
    />
    <TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Male"
    	android:textSize="25sp" 
    	android:id="@+id/mypro_gender"
    	android:textColor="@color/announce_labels"
    />
    </LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
	<TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Average Rating:     "
    	android:textSize="25sp" 
    	android:textColor="@color/announce_labels"
    />
    <TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="10"
    	android:textSize="25sp" 
    	android:id="@+id/mypro_rating"
    	android:textColor="@color/announce_labels"
    />
    </LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
	<TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Number of Posts:  "
    	android:textSize="25sp" 
    	android:textColor="@color/announce_labels"
    />
    <TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="47"
    	android:textSize="25sp" 
    	android:id="@+id/mypro_numofpost"
    	android:textColor="@color/announce_labels"
    />
    </LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:gravity="center">
      <Button android:id="@+id/EditProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"/>
         
          <Button android:id="@+id/DeleteProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Profile"/>
    </LinearLayout>
       </LinearLayout>
