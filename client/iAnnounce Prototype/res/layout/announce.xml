<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/announcemts_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Announcment:"
            android:textColor="@color/announce_txt"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_announcement"
            android:layout_width="fill_parent"
            android:layout_height="100sp"
            android:background="@drawable/custom_input"
            android:textColor="@color/announce_txt" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/announcement_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="320"
                android:textColor="@color/announce_char_remaining"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Range:"
            android:textColor="@color/announce_labels"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/RG_range"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio_loud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loud"
                android:textColor="@color/announce_labels" />

            <RadioButton
                android:id="@+id/radio_louder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Louder"
                android:textColor="@color/announce_labels" />

            <RadioButton
                android:id="@+id/radio_loudest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loudest"
                android:textColor="@color/announce_labels" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Announce to:"
            android:textColor="@color/announce_labels"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Life Span"
            android:textSize="20sp" 
            android:textColor="@color/announce_labels_fade"
            android:id="@+id/life_check_box"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alive for"
                android:id="@+id/life_text1"
                android:textSize="20sp"
                android:textColor="@color/announce_labels_fade" />

            <EditText
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:id="@+id/life_span" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/life_text2"
                android:text="days"
                android:textSize="20sp"
                android:textColor="@color/announce_labels_fade"
                 />
        </LinearLayout>

        <Button
            android:id="@+id/bt_announce_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:text="Announce" />
    </LinearLayout>

</ScrollView>