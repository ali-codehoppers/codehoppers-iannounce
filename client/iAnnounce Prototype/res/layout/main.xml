<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/login_scrollview_bg" android:scrollbars="none"
	android:padding="10dp">
	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="match_parent" android:id="@+id/RL1"
		android:background="@drawable/login_relativelayout_bg"
		android:paddingBottom="30dp">

		<ImageView android:src="@drawable/login_p"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentRight="true" />

		<TableLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginTop="60dp"
			android:padding="10dp">

			<TableRow android:orientation="horizontal">

				<TextView android:id="@+id/mainTextviewLogin"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="@string/loginColon" android:textSize="20sp"
					android:textColor="@color/login_text_labels" android:layout_weight="3" />

				<EditText android:id="@+id/mainEdittextLogin"
					android:layout_width="150dp" android:layout_height="30dp"
					android:layout_weight="1" android:background="@drawable/custom_input" android:textColor="@color/login_input_textColor"/>

			</TableRow>

			<TableRow android:orientation="horizontal" android:layout_marginTop="10dp">

				<TextView android:id="@+id/mainTextviewPassword"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="@string/passwordColon" android:paddingRight="5sp"
					android:textSize="20sp" android:layout_below="@+id/mainTextviewLogin"
					android:textColor="@color/login_text_labels" android:layout_weight="3" />

				<EditText android:id="@+id/mainEdittextPassword"
					android:layout_width="150dp" android:layout_height="30sp"
					android:password="true" android:layout_weight="1" android:background="@drawable/custom_input" android:textColor="@color/login_input_textColor"/>
			</TableRow>

			<TableRow android:orientation="horizontal" android:gravity="right">
				<TextView android:id="@+id/forgo" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Forgot Password?"
					android:textSize="16sp" android:gravity="right" android:textColor="@color/login_forgot_pass" />

			</TableRow>


			<TableRow android:orientation="horizontal" android:gravity="right"
				android:layout_marginTop="30dp">
				<RelativeLayout>
					<CheckBox android:id="@+id/mainCheckboxRememberme"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="@string/rememberMe" android:textSize="15sp"
						android:layout_alignParentRight="true" android:textColor="@color/login_forgot_pass" />
				</RelativeLayout>
				
			</TableRow>
			
			<TableRow android:orientation="horizontal"
				android:layout_width="wrap_content" android:gravity="right"
				android:layout_marginTop="20dp">
				<LinearLayout android:gravity="right">
					<Button android:id="@+id/mainButtonLogin"
						android:layout_width="150dp" android:layout_height="wrap_content"
						android:text="@string/login" />
				</LinearLayout>
			</TableRow>



			<TableRow android:layout_marginTop="20dp">
				<LinearLayout android:orientation="horizontal"
					android:layout_width="wrap_content" android:layout_height="wrap_content">
					<TextView android:id="@+id/mainTextviewRegister"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="Not a user" android:textSize="16dp"
						android:textColor="@color/login_text_labels" />
					<ImageView android:src="@drawable/q" android:id="@+id/register_img"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_marginLeft="5dp" />
				</LinearLayout>				
			</TableRow>
			
			<TableRow >
			<TextView android:layout_width="wrap_content" android:id="@+id/main_register"
						android:layout_height="wrap_content" android:text="Click here to SignUp"
						android:textSize="16dp" android:textColor="@color/login_text_labels"/>			
			</TableRow>
			


		</TableLayout>


	</RelativeLayout>
</ScrollView>